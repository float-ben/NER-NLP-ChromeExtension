{
    "manifest_version": 3,
    "name": "Word Highlighter",
    "version": "1.0",
    "description": "Highlight words on websites",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon16.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons":{
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
  }
  }
  